DEBUGFLAGS               = -g
F90DEBUGFLAGS            = -g

HECMWLIB_TARGETFILE      = libhecmw2.a
HECMWLIB_F90TARGETFILE   = libfhecmw2.a

CONVERTER_TARGETFILE     = conv2mw3
PARTITIONER_TARGETFILE   = hecmw_part2
VISUALIZER_TARGETFILE    = hecmw_vis2

F90MODULEPOSTFIX         = mod
COBJFILEPOSTFIX          = o
CPPOBJFILEPOSTFIX        = o
F90OBJFILEPOSTFIX        = o

MV                       = mv -f
RANLIB                   = ranlib

DEBUG_OPTFLAGS           = -DDEBUG
NODEBUG_OPTFLAGS         = -DNDEBUG
SERIAL_OPTFLAGS          = -DHECMW_SERIAL

BASE_CFLAGS              = -I.
BASE_CPPFLAGS            = -I.
BASE_F90FLAGS            = -I.

MPI_CFLAGS               = -I$(MPIINCDIR)
MPI_LDFLAGS              = -L$(MPILIBDIR) $(MPILIBS)
MPI_F90FLAGS             = -I$(MPIINCDIR)
MPI_F90LDFLAGS           = -L$(MPILIBDIR) $(MPILIBS)

HECMW_CFLAGS             = -I$(HECMWINCDIR)
HECMW_LDFLAGS            = -L$(HECMWLIBDIR) $(HECMWLIBS)
HECMW_CPPFLAGS           = -I$(HECMWINCDIR)
HECMW_CPPLDFLAGS         = -L$(HECMWLIBDIR) $(HECMWLIBS)
HECMW_F90FLAGS           = -I$(HECMWINCDIR)
HECMW_F90LDFLAGS         = -L$(HECMWLIBDIR) $(HECMWLIBS)

HECMW_CFLAGS2            = -I$(HECMWINCDIR2)
HECMW_LDFLAGS2           = -L$(HECMWLIBDIR2) $(HECMWLIBS2)

METISLIBS                = -lmetis
METIS_CFLAGS             = -I$(METISINCDIR)
METIS_LDFLAGS            = -L$(METISLIBDIR) $(METISLIBS)
METIS_F90FLAGS           = -I$(METISINCDIR)
METIS_F90LDFLAGS         = -L$(METISLIBDIR) $(METISLIBS)

PARMETISLIBS             = -lparmetis -lmetis
PARMETIS_CFLAGS          = -I$(PARMETISINCDIR)
PARMETIS_LDFLAGS         = -L$(PARMETISLIBDIR) $(PARMETISLIBS)
PARMETIS_F90FLAGS        = -I$(PARMETISINCDIR)
PARMETIS_F90LDFLAGS      = -L$(PARMETISLIBDIR) $(PARMETISLIBS)

REFINERLIBS              = -lRcapRefiner
REFINER_CFLAGS           = -DREVOCAP_REFINE -I$(REFINERINCDIR)
REFINER_LDFLAGS          = -L$(REFINERLIBDIR) $(REFINERLIBS)
