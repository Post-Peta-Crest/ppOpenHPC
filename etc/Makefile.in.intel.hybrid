# Install directory
PREFIX        = /usr/local/ppOpen-HPC/ppohAMRFDM_0.3.0
INCDIR        = $(PREFIX)/include
LIBDIR        = $(PREFIX)/lib
BINDIR        = $(PREFIX)/bin

# Fortran compiler settings
F90           = ifort
MPIF90        = mpif90
sFFLAGS       = -O3
pFFLAGS       = -O3 -openmp

# Archiver settings
AR      = ar
ARFLAGS = rv

# ETC
CP            = cp -f
RM            = rm -rf
MKDIR         = mkdir -p
